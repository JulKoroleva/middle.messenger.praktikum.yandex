<main class="login-page">
  <form class="login-page__form">
     <h1 class="form__title">Вход</h1>
    <div class="form__inputs-container">
      {{#each inputs}}
        {{{ Input inputName=this.inputName inputLabel=this.inputLabel inputType=this.inputType inputMainClass=this.inputMainClass inputClass=this.inputClass labelClass=this.labelClass }}}
      {{/each}}
      </div>
    <div class="form__buttons-container">
      {{#each buttons}}
        {{{ Button buttonText=this.buttonText buttonClass=this.buttonClass buttonLink=this.buttonLink}}}
      {{/each}}
    </div>
  </form>
</main>
