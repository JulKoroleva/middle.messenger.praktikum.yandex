{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "rules": {
    "color-hex-case": "lower",
    "selector-class-pattern": [
      "^[a-z]+(-[a-z]+|__[a-z]+)*$",
      {
        "message": "Имя класса не соответствует заданному паттерну"
      }
    ]
  },
  "ignoreFiles": ["dist/*"]
}
