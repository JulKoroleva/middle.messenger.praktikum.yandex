{
    "compilerOptions": {
      "outDir": "./dist", // Директория для скомпилированных файлов
      "rootDir": "./src", // Корневая директория с исходниками
      "target": "ESNext",
      "module": "ESNext",
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*", "src/types/**/*"]
  }
  