    "typescript": "^5.5.3",
    "vite": "^5.4.1"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "handlebars": "^4.7.8",
    "ts-node": "^10.9.2",
    "vite-plugin-eslint": "^1.8.1",
