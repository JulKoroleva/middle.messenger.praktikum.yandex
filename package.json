    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "chai": "^5.1.2",
    "eslint": "^9.10.0",
    "esm-loader-css": "^1.0.6",
    "esm-loader-typescript": "^1.0.6",
