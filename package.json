{
  "name": "web-messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite build && node server.cjs",
    "dev": "vite",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "tsc --noEmit",
    "lint:styles": "stylelint '**/*.{css,scss}'",
    "lintstyles:fix": "stylelint '**/*.{css,scss}' --fix",
    "test": "mocha --require ts-node/register 'src/**/*.test.ts'",
    "precommit": "npm run lint && npm run lint:styles && npm run check && npm run test",
    "postinstall": "npx husky install && cp .husky/pre-commit .git/hooks/pre-commit"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "chai": "^5.0.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "esm-loader-css": "^1.0.6",
    "esm-loader-typescript": "^1.0.6",
    "esmock": "^2.6.2",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "mocha": "^10.2.0",
    "node-esm-loader": "^0.3.0",
    "nodemon": "^3.0.1",
    "sinon": "^17.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^4.4.5",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "esm-loader-css": "^1.0.6",
    "esm-loader-typescript": "^1.0.6",
    "esmock": "^2.6.9",
    "express": "^4.19.2",
    "nanoid": "^5.0.7",
    "uuid": "^11.0.2",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^4.2.0"
  }
}
