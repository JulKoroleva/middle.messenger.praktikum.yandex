{
  "name": "web-messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite build && node server.cjs",
    "dev": "vite",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "tsc --noEmit",
    "lint:styles": "stylelint '**/*.{css,scss}'",
    "lintstyles:fix": "stylelint '**/*.{css,scss}' --fix",
    "test": "mocha --loader ./loader-css.js",
    "precommit": "npm run lint && npm run lint:styles && npm run check && npm run test",
    "postinstall": "npx husky install && cp .husky/pre-commit .git/hooks/pre-commit"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/chai": "^5.0.0",
    "@types/express": "^4.17.21",
    "@types/fetch-mock": "^7.3.8",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.9",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "chai": "^5.1.2",
    "eslint": "^8.57.0",
    "fetch-mock": "^12.0.0",
    "globals": "^15.9.0",
    "handlebars": "^4.7.8",
    "husky": "^8.0.3",
    "jsdom": "^25.0.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.7.3",
    "module-alias": "^2.2.3",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.47",
    "sass": "^1.77.8",
    "scss": "^0.2.4",
    "sinon": "^19.0.2",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.2.0",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "express": "^4.19.2",
    "nanoid": "^5.0.7",
    "uuid": "^11.0.2",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^4.2.0"
  }
